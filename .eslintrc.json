{
  "extends": "airbnb-base",
  "plugins": [
    "html"
  ],
  "env": { "commonjs": true },
  "globals": {
    "alert": false,
    "document": false,
    "window": false
  },
  "rules": {
    "arrow-parens": "off",
    "comma-dangle": ["error", "never"],
    "curly": "off",
    "no-console": "off",
    "no-multiple-empty-lines": ["error", { "max": 3 }],
    "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "spaced-comment": "off"
  }
}

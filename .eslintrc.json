{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "env": { "mocha": true },
  "globals": {
    "$": false,
    "alert": false,
    "document": false,
    "should": false,
    "window": false
  },
  "rules": {
    "arrow-parens": "off",
    "class-methods-use-this": "off",
    "comma-dangle": ["error", "never"],
    "curly": "off",
    "no-multiple-empty-lines": ["error", { "max": 3 }],
    "no-restricted-syntax": ["error", "LabeledStatement", "WithStatement"],
    "no-underscore-dangle": "off",
    "spaced-comment": "off",
    "vue/html-indent": "off",
    "vue/html-self-closing": ["error", {
      "html": {
        "void": "never",
        "normal": "never",
        "component": "always"
      },
      "svg": "always",
      "math": "always"
    }],
    "vue/max-attributes-per-line": "off"
  }
}
